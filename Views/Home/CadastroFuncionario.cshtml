@model FuncionarioModel;

@{
    ViewData["Title"] = "CadastroFuncionario";
}

@{


    <h1 style="text-align: center">Cadastro do Funcionário:</h1>

    <br/>
        
        if (ViewBag.MsgFuncJaExiste != null)
        {
            <p style="text-align: center; color:red">ViewBag.MsgFuncJaExiste</p>
        }
    

    <form asp-controller="Home" asp-action="CadastroFuncionario" method="post">


        <div class="form-group" hidden>
            <label>Id</label>
            <input asp-for="Func_Id" type="text" class="form-control" value="@try{
                    @ViewBag.Funcionario.Func_Id
            } catch{@String.Empty}" readonly style="width: 7%" id="input-id"/>
        </div>


        <div class="form-group">
            <label>Nome</label>
            @Html.ValidationMessageFor(model => model.Func_Nome, "", new { @class = "text-danger" })
            <input asp-for="Func_Nome" type="text" class="form-control" value="@try{
                    @ViewBag.Funcionario.Func_Nome
                } catch{@String.Empty}" />
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.ValidationMessageFor(model => model.Func_Email, "", new { @class = "text-danger" })
            <input asp-for="Func_Email" type="email" class="form-control" value="@try{
                  @ViewBag.Funcionario.Func_Email
              } catch{@String.Empty}" />
        </div>

        <div class="form-group">
            <label>Cargo</label>
            @Html.ValidationMessageFor(model => model.Func_Cargo, "", new { @class = "text-danger" })
            <input asp-for="Func_Cargo" type="text" class="form-control" value="@try{
                    @ViewBag.Funcionario.Func_Cargo
                } catch{@String.Empty}" />
        </div>

        <div class="form-group">
            <label>Salário (R$)</label>
            @Html.ValidationMessageFor(model => model.Func_Salario, "", new { @class = "text-danger" })
            <input asp-for="Func_Salario" type="number" class="form-control" value="@try{
                      @ViewBag.Funcionario.Func_Salario
                } catch{@String.Empty}" step="0.01" min="0.01" placeholder="3000.90" />
        </div>

        <div class="form-group">
            <label>Data de Contratação</label>
            <input asp-for="Func_DataContratacao" type="text" class="form-control" value="@try{
                   @ViewBag.Funcionario.Func_DataContratacao
            } catch{@String.Empty}" readonly style="width: 15%"/>
        </div>

        <br>

        <button class="btn btn-block btn-success" type="submit" style="width: 100%">Salvar Funcionário</button>
      
    </form>

    
}


